          </section>
      </section>
      
    </section>

    <section class="row">
        <h3 id="feeling">My intentions</h3>
        
        <section class="col-sm-6" id="second">
          <ul class="messages mood">
          <% for(var i=0; i<intentionRecord.length; i++) {%>
          
            <li class="message reflecAff" id="<%= intentionRecord[i]._id %>">
              <p>Date:</p><span class="record date" ><%= intentionRecord[i].date %></span>
              <p>Intention:</p><span class="record name" ><%= intentionRecord[i].name %></span>
              <p>Notes:</p><span class="record note" ><%= intentionRecord[i].note %></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              <span><i class="fa fa-pencil-square-o" aria-hidden="true">Edit</i></span>
              
            
                <form action="/edit" method="POST" class="popUp">
                  <input type="hidden" name="msgId" value="<%= intentionRecord[i]._id %>" >

                  <label class="record">Date:
                  <input type="date" class="record" name="date" placeholder="Today's Date" value="<%= intentionRecord[i].date %>" ></label>

                  <label class="record">Intention:
                  <input type="text" class="record" name="name" placeholder="My Intention" value="<%= intentionRecord[i].name %>" ></label>

                  <label class="record">Note:
                  <input type="text" class="record" name="note" placeholder="Notes" value="<%= intentionRecord[i].note %>" ></label>

                  <button type="submit" class="updateRec">Submit</button>
                </form>
    
            </li>
          
          <% } %>
          </ul>
    </section>
  </section>
  </section>
        


