<!-- users saved affirmations page -->
<!doctype html>
<html>
<head>
    <title>Evolve App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="font-awesome.min.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span> My Affirmations</h1>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
    </div>

    <div class="row">

        <div class="col-sm-6">
            <div class="well">
                <h3 class="headingThree">Drop an affirmation or add one of your favorite quotes!</h3>
                <% if (user.local.email) { %>
                  <form action="/messages" method="POST">
                    <label for="email">Enter Name or Email</label>
                    <input class="emailShow" type="text" value="<%= user.local.email %>" placeholder="Name" name="name">
                  
                    <label class="message" for="message">Add your message</label>
                    <input class="msgs" type="text" placeholder="Enter message here" name="msg">
                    <button class="add" type="submit">Add Affirmation</button>
                </form>
            </div>
        </div>
        <div class="col-sm-6" id="second">
          <h3>Messages</h3>
          
          <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
              <li class="message">
                <span><%= messages[i].name %></span>
                <span><%= messages[i].msg %></span>
                <span><%= messages[i].smile %></span>
                <span><i class="fa fa-smile-o" aria-hidden="true">Reviewed</i></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </li>
            <% } %>
          </ul>

        </div>
        <% } %>
    </div>

</div>

<script src="main.js"></script>

</body>
</html>
