      <a href="/logout" class="btn btn-default btn-sm"><i class="fa fa-sign-out" aria-hidden="true"></i>Logout</a>
    </div>
    <section class="container">
      <section class="row">
          <!-- LOCAL INFORMATION -->
          <section class="col-sm-6 affirm">
              <section class="well intents">

                      <a href="/profile"><button>Profile</button></a>
                      <hr>

                      <h1 class="headingThree">Set your intention for the day or week!</h1>
                      <p>Type in your own intention for the week and save it or click the <em>Get Intention</em> button to recieve one!</p>

                      <% if (user.local.email) { %>
                        <form action="/intentionForm" method="POST">
                          <label for="date">Today's Date is:
                          <input type="date" class="emailShow" name="date" placeholder="Today's Date"></label>

                          <label for="intention">My intention today is:
                          <input type="text" class="emailShow" name="name" placeholder="Intention Message"></label>

                          <label for="date">How I am feeling today:
                          <input type="text" class="emailShow" name="note" placeholder="Mood Updates"></label>


                          <button class="add" type="submit">Submit</button>
        
                        <br>OR <br>
                        </form>
                        <p><button id="getIntention" type="submit">GET</button></p>
        
                        <h3 id="displayIntent"></h3>
        
                    <% } %>
              </section>
